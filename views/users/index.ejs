<!-- views/users/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Users</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>All Users</h1>
    <a href="/users/new" class="add-user">Add New User</a>
    <ul class="user-list">
      <% users.forEach(user => { %>
        <li class="user-item">
          <div class="user-info">
            <strong><%= user.name %></strong>, <%= user.age %> years old, <%= user.email %>, <%= user.gender %>
          </div>
          <div class="user-actions">
            <a href="/users/<%= user._id %>/edit">Edit</a>
            <form action="/users/<%= user._id %>/delete" method="POST" style="display:inline">
              <button>Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
